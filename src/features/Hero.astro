---
import SocialIconNav from '../components/SocialIconNav.astro';
import LOGO from '../assets/ejandtn-logo.png';
import HEROIMAGE from '../assets/THBTTL-banner-web.jpg'
import BubbleNav from '../components/BubbleNav.astro';
import { Image } from 'astro:assets';
---

<header class="hero">
  <BubbleNav />

  <Image 
    src={HEROIMAGE} 
    alt="Elijah James And The Nightmares Album Artwork as Hero Image" 
    class="hero-image"
    format="webp"
   /> 

  <div class="section-header">
    <nav class="main-nav">
      <a href="#" class="link-scroll" aria-label='Link to take you to top of page'>
        <Image
          src={LOGO}
          alt="Elijah James And The Nightmares logo"
          class="header-logo"
          format="webp"
        /></a
      >
      <ul class="nav-pages">
        <li><a class="link link-scroll" href="#tour" aria-label='Link to scroll down to tour section'>Tour</a></li>
        <li><a class="link link-scroll" href="#music" aria-label='Link to scroll down to music section'>Music</a></li>
        <li><a class="link link-scroll" href="#videos" aria-label='Link to scroll down to videos section'>Videos</a></li>
        <li><a class="link link-scroll" href="#about" aria-label='Link to scroll down to about section'>About</a></li>
        <li>
          <a
            class="link"
            href="https://ejandtn.bandcamp.com/merch"
            target="_blank"
            rel="noreferrer noopener"
            aria-label='Link to take you to bandcamp merch shop'>Shop</a
          >
        </li>
      </ul>

    </nav>

    <div class="header-container">
      <div class="header-container-inner">
        <h1 class="header-text">
          New album <br />
          <span class="album-title-hero"
            >'The Hellish Bending <br /> Towards The Light' <br /></span
          >
          Out Now
        </h1>
        <a class="link-scroll" href="#music" aria-label='Link to take you to the music section'
          ><button class="btn listen-btn">Listen</button></a
        >
        <a
          href="https://goldenbelieversrecords.bandcamp.com/album/the-hellish-bending-towards-the-light"
          target="_blank"
          rel="noreferrer noopener"
          aria-label='Link to take you to bandcamp page for the album The Hellish Bending Towards The Light'
          ><button class="btn buy-btn">Buy Here</button></a
        >
      </div>
    </div>
  </div>
</header>

<script>
  const navLinks = document.querySelectorAll('.link-scroll');
  const stickyNav = document.querySelector('.sticky-nav');
  const stickyNavHeight = (document.querySelector('.sticky-nav') as HTMLElement)
    .offsetHeight;

  function scrollToElement(e) {
    e.preventDefault();

    const href = this.getAttribute('href');

    if (href === '#') {
      window.scrollTo({
        top: 0,
        behavior: 'smooth',
      });
      return;
    }

    const element = document.querySelector(href);

    const elementPosition = element.getBoundingClientRect().top;

    const scrollTo = elementPosition + window.pageYOffset - stickyNavHeight;

    if (href !== '#' && href.startsWith('#')) {
      window.scrollTo({
        top: scrollTo,
        behavior: 'smooth',
      });
    }

    if (stickyNav.classList.contains('nav-open')) {
      stickyNav.classList.toggle('nav-open');
    }
  }

  navLinks.forEach(link => link.addEventListener('click', scrollToElement));
</script>

