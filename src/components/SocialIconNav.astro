---
import { Icon } from 'astro-icon';

type Props = {
  iconHeight: string;
  iconWidth: string;
};

const { iconHeight, iconWidth }: Props = Astro.props;
---

<ul class="nav-icons">
  <li>
    <a
      class="icon-link"
      href="https://www.facebook.com/ejhallows"
      target="_blank"
      rel="noreferrer noopener"
      aria-label="Link to take you to the bands facebook page"
    >
      <Icon pack="ic" class="icon" name="baseline-facebook" />
    </a>
  </li>
  <li>
    <a
      class="icon-link"
      href="https://www.youtube.com/@ejhallows"
      target="_blank"
      rel="noreferrer noopener"
      aria-label="Link to take you to the bands youtube page"
    >
      <Icon pack="bi" class="icon" name="youtube" />
    </a>
  </li>
  <li>
    <a
      class="icon-link"
      href="https://www.instagram.com/ejhallows/"
      target="_blank"
      rel="noreferrer noopener"
      aria-label="Link to take you to the bands instagram page"
    >
      <Icon pack="mdi" class="icon" name="instagram" />
    </a>
  </li>
  <li>
    <a
      class="icon-link"
      href="https://twitter.com/ejhallows"
      target="_blank"
      rel="noreferrer noopener"
      aria-label="Link to take you to the bands twitter page"
    >
      <Icon pack="mdi" class="icon" name="twitter" />
    </a>
  </li>
</ul>

<style lang="css" define:vars={{ iconHeight, iconWidth }}>
  .nav-icons {
    list-style: none;

    display: flex;
    gap: 1.8rem;
  }

  [astro-icon] {
    height: var(--iconHeight);
    width: var(--iconWidth);
    cursor: pointer;
  }

  .icon-link:link,
  .icon-link:visited {
    display: inline-block;
    color: var(--light-color);
    transition: all 0.3s;
  }

  .icon-link:hover,
  .icon-link:active {
    color: var(--light-color);

    transform: scale(1.05);
  }
</style>
