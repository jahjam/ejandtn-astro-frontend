---
import { Image } from '@astrojs/image/components';
type Props = {
  img: ImageMetadata;
  albumTitle: string;
  albumDate: string;
  releaseDate: string;
};

const { img, albumTitle, albumDate, releaseDate } = Astro.props;
---

<div class="art-box" id={`art-box-${releaseDate}`} tabindex="0">
  <Image
    class="album-artwork"
    src={img}
    alt={`Elijah James And The Nightmares Album Art of ${albumTitle}`}
    format="webp"
  />
  <span class="album-title">{albumTitle}</span>
  <span class="album-date">{albumDate}</span>
</div>

<script define:vars={{ releaseDate }}>
  const artBox = document.getElementById(`art-box-${releaseDate}`);

  artBox.dataset.id = releaseDate;
</script>

<style>
  .art-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.8rem;
    cursor: pointer;

    transition: all 0.2s linear;
  }

  .art-box:hover {
    transform: scale(105%);
  }

  .album-title {
    font-size: 2rem;
    text-align: center;
  }

  .music-section-desc {
    text-align: center;
    margin-top: -2rem;
  }

  .album-date {
    font-size: 1.4rem;
  }

  .album-artwork {
    height: 100%;
    width: 100%;
    box-shadow: 2px 2px 12px -1px hsla(0, 0%, 0%, 0.774);
  }
</style>
