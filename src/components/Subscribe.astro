---
import SocialIconNav from './SocialIconNav.astro';
import SubscribeForm from './SubscribeForm.astro';
---

<section class="subscribe-section section-seperator">
  <h1 class="form-header">Subscribe</h1>

  <SubscribeForm direction="flex" />

  <SocialIconNav iconHeight="2.8rem" iconWidth="2.8rem" />
</section>

<style lang="css">
  .subscribe-section {
    padding: 9.8rem;
    background-color: var(--dark-color);
    position: relative;

    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3.2rem;
  }

  .sub-icon {
    height: 2rem;
    width: 2rem;
  }
</style>
