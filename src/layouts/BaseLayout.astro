---
import MainHead from '../components/MainHead.astro';

type Props = {
  title: string;
  description: string;
};

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <MainHead
      title={title}
      description={description}
      canonicalURL={canonicalURL}
    />
  </head>
  <body>
    <slot />

    <style lang="scss" is:global>
      :root {
        /*
        past colours
        --primary-color: #6e95ce; */
        --primary-color: #c62f3b;

        --grey-color: #f0f2e66b;

        --light-color: #f0f2e6;
        --dark-color: #090d16;
        --dark-color-less-transparent: rgba(0, 0, 0, 0.4);
        --dark-color-transparent: rgba(0, 0, 0, 0.8);

        --border: 0.2rem solid var(--light-color);
      }

      *,
      *::after,
      *::before {
        padding: 0;
        margin: 0;
        box-sizing: inherit;
      }

      *:focus {
        outline: none;
        box-shadow: 0 0 0 0.4rem var(--primary-color);
      }

      html {
        font-family: system-ui, sans-serif;
        background-color: var(--dark-color);

        font-size: 62.5%;
        box-sizing: border-box;

        overflow-x: hidden;
      }

      body {
        font-family: 'Roboto', sans-serif;
        font-size: 1.6rem;
        color: var(--light-color);
      }

      h1 {
        font-family: 'rockwell', sans-serif;
        font-size: 3.6rem;

        @media (max-width: 59em) {
          font-size: 3.2rem;
        }

        @media (max-width: 35em) {
          font-size: 2.8rem;
        }
      }

      h2 {
        font-family: 'rockwell', sans-serif;
        font-size: 2.8rem;

        @media (max-width: 59em) {
          font-size: 2.6rem;
          text-align: center;
        }

        @media (max-width: 51em) {
          font-size: 2.4rem;
        }

        @media (max-width: 41em) {
          font-size: 2rem;
          text-align: center;
        }

        @media (max-width: 35em) {
          font-size: 1.8rem;
          text-align: center;
        }

        @media (max-width: 29em) {
          font-size: 2.4rem;
          text-align: center;
        }

        @media (max-width: 27em) {
          font-size: 2.4rem;
          text-align: center;
        }
      }

      h3 {
        font-family: 'rockwell', sans-serif;
        font-size: 2rem;

        @media (max-width: 51em) {
          font-size: 1.8rem;
        }

        @media (max-width: 41em) {
          font-size: 1.4rem;
        }

        @media (max-width: 35em) {
          font-size: 1.2rem;
          text-align: center;
        }
      }

      p {
        font-size: 1.2rem;
      }

      .container {
        margin: 0 auto;
        height: 100%;
      }

      /*
****************************************
LINKS
****************************************
*/

      .link:link,
      .link:visited {
        display: inline-block;
        text-decoration: none;
        color: inherit;

        transition: all 0.3s;
      }

      .link:hover,
      .link:active {
        text-decoration: none;
        color: var(--primary-color);
        transform: scale(1.05);
      }

      /*
****************************************
DEFAULT STYLES
****************************************
*/

      .section-seperator::after {
        content: '';
        width: 90%;
        position: absolute;
        bottom: 0;
        border-bottom: 0.1rem solid rgba(240, 242, 230, 0.603);
      }

      .grid--2-cols {
        display: grid;
        gap: 3.6rem;
        grid-template-columns: 1fr 1fr;
      }

      .grid--3-cols {
        display: grid;
        gap: 3.6rem;
        grid-template-columns: 1fr 1fr 1fr;
      }

      /*
****************************************
BUTTONS
****************************************
*/

      .btn {
        @media (max-width: 27em) {
          font-size: 1.8rem;
          padding: 1rem !important;
        }
      }

      .btn,
      .btn:link,
      .btn:active {
        font-family: inherit;
        font-size: 2rem;
        padding: 1.2rem;
        border: none;
        background-color: transparent;
        color: var(--light-color);
        border-bottom: 0.2rem solid var(--light-color);
        cursor: pointer;

        position: relative;

        transition: all 0.3s;
      }

      .btn:hover,
      .btn:visited {
        transform: scale(1.05);
      }

      .nodisplay {
        display: none !important;
      }

      .nooverflow {
        overflow: hidden !important;
      }

      .opacity {
        opacity: 1 !important;
        pointer-events: auto;
      }

      .removePointer {
        pointer-events: none !important;
      }

      .addPointer {
        pointer-events: all !important;
      }

      .bit-widget-container {
        @media (max-width: 35em) {
          align-self: center;
        }
      }
    </style>
  </body>
</html>
